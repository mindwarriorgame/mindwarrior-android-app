<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg">

    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/panel_difficulty"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/progress_title"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/progress_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/progress_subtitle"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="13sp" />

        <com.mindwarrior.app.ProgressGraphView
            android:id="@+id/progress_graph"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/progress_reset_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/chip_bg_state"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/progress_reset_zoom"
            android:textAllCaps="false"
            android:textColor="@color/chip_text"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/progress_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/progress_legend"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/progress_legend_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/progress_legend_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_legend_mean"
                android:textColor="@color/legend_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/progress_legend_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:text="@string/progress_legend_separator"
                android:textColor="@color/menu_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/progress_legend_threshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_legend_threshold"
                android:textColor="@color/legend_red"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/progress_active_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/progress_active_time"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/progress_diamonds_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/progress_diamonds_total"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/progress_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/chip_bg_state"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/progress_close"
            android:textAllCaps="false"
            android:textColor="@color/chip_text" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
