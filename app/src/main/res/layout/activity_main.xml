<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/split_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/part_a"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/split_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/part_a_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/part_a_background"
            android:scaleType="centerCrop"
            android:src="@drawable/part_a_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/part_a_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.8"
            android:background="@drawable/bg_part_a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/diamonds_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/diamonds_chip_bg_state"
                android:elevation="6dp"
                android:fontFamily="sans-serif-black"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/diamonds_button"
                android:textAllCaps="false"
                android:textColor="@color/diamonds_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/progress_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1.4"
                android:background="@drawable/progress_chip_bg_state"
                android:elevation="6dp"
                android:fontFamily="sans-serif-black"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/progress_button"
                android:textAllCaps="false"
                android:textColor="@color/progress_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lab_button"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/lab_chip_bg_state"
                android:elevation="6dp"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="8dp"
                android:text="@string/lab_button"
                android:textAllCaps="false"
                android:textColor="@color/lab_text" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/menu_button"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu_button"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@color/menu_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/panel_menu"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/top_bar"
            app:layout_constraintTop_toBottomOf="@id/top_bar">

            <TextView
                android:id="@+id/menu_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/menu_sleep"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="@color/menu_stroke" />

            <TextView
                android:id="@+id/menu_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/menu_progress"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="@color/menu_stroke" />

            <TextView
                android:id="@+id/menu_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/menu_difficulty"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="@color/menu_stroke" />

            <TextView
                android:id="@+id/menu_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/menu_settings"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="@color/menu_stroke" />

            <TextView
                android:id="@+id/menu_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/menu_debug"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/timer_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/timer_text"
                    android:textColor="@color/timer_text"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pause_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/pause_indicator"
                    android:textColor="@color/timer_text"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:alpha="0.5"
                    android:background="@drawable/chip_bg_state"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="@string/pause_button_pause"
                    android:textAllCaps="false"
                    android:textColor="@color/chip_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/review_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/review_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/review_button_ripple"
                    android:fontFamily="sans-serif-black"
                    android:paddingHorizontal="34dp"
                    android:paddingVertical="16dp"
                    android:text="@string/review_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/snowflake_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/snowflake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snowflake"
                    android:textColor="@color/timer_text"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/snowflake_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="monospace"
                    android:text="@string/snowflake_timer_text"
                    android:textColor="@color/timer_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/part_b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_part_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/split_guideline">

        <TextView
            android:id="@+id/logs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/logs_title"
            android:textColor="@color/log_title"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/logs_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logs_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
